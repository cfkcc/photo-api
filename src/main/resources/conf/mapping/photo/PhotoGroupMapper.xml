<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PhotoGroupMapper">
	

	<select id="findById" resultType="com.photo.api.model.photo.PhotoGroup">
		select * from photo_group where group_id = #{groupId}
	</select>
	<select id="findByPage" resultType="com.photo.api.model.photo.PhotoGroup">
		select * from photo_group
		<where>
			<trim prefixOverrides="and ">
				<if test="userId != null and userId != ''">
					and user_id = #{userId}
				</if>
				<if test="groupId != null and groupId != ''">
					and group_id = #{groupId}
				</if>
				<if test="isHot != null">
					and is_hot = #{isHot}
				</if>
				<if test="status != null">
					and status = #{status}
				</if>
				<if test="flag != null">
					and flag = #{flag}
				</if>
				<if test="abroad != null">
					and abroad = #{abroad}
				</if>
			</trim>
			<if test="ordering != null">
				order by #{ordering}
			</if>
		</where>
		limit #{offset},#{limit}
	</select>
	<select id="findCountByPage" resultType="Integer">
		select count(*) from photo_group
		<where>
			<trim prefixOverrides="and ">
				<if test="userId != null and userId != ''">
					and user_id = #{userId}
				</if>
				<if test="groupId != null and groupId != ''">
					and group_id = #{groupId}
				</if>
				<if test="isHot != null">
					and is_hot = #{isHot}
				</if>
				<if test="status != null">
					and status = #{status}
				</if>
				<if test="flag != null">
					and flag = #{flag}
				</if>
				<if test="abroad != null">
					and abroad = #{abroad}
				</if>
			</trim>
		</where>
	</select>
</mapper>