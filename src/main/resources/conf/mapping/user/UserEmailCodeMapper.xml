<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserEmailCodeMapper">
	<select id="findByParam" resultType="com.photo.api.model.user.UserEmailCode">
		select * from user_email_code 
		<where>
		<trim prefixOverrides="and">
			<if test="userId != null and userId != ''">
				and user_id = #{userId} 
			</if> 
			<if test="email != null and email != ''">
				and email = #{email}
			</if>
		 </trim>
		</where> 
		order by create_time desc limit 0,1
	</select>
	
	<select id="findByCode" resultType="com.photo.api.model.user.UserEmailCode">
		select * from user_email_code 
		where code=#{code}
		order by create_time desc limit 0,1
	</select>
	
	<insert id="add" parameterType="com.photo.api.model.user.UserEmailCode">
		insert into user_email_code
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="codeId != null and codeId != ''">
				code_id,
			</if>
			<if test="userId != null and userId != ''">
				user_id,
			</if>
			<if test="status != null">
				status,
			</if>
			<if test="type != null">
				type,
			</if>
			<if test="email != null and email != ''">
				email,
			</if>
			<if test="code != null and code != ''">
				code,
			</if>
			<if test="createTime != null">
				create_time,
			</if>
			<if test="expireTime != null">
				expire_time
			</if>
		</trim>
		<trim prefix=" values (" suffix=")" suffixOverrides=",">
			<if test="codeId != null and codeId != ''">
				#{codeId},
			</if>
			<if test="userId != null and userId != ''">
				#{userId},
			</if>
			<if test="status != null">
				#{status},
			</if>
			<if test="type != null">
				#{type},
			</if>
			<if test="email != null and email != ''">
				#{email},
			</if>
			<if test="code != null and code != ''">
				#{code},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="expireTime != null">
				#{expireTime},
			</if>
		</trim>
	</insert>
	<update id="update" parameterType="com.photo.api.model.user.UserEmailCode">
		update user_email_code
			set status=#{status}
		where email=#{email} and status = 0
	</update>
	
	<delete id="delete" parameterType="String">
		delete from user_email_code where user_id in
		<foreach item="idItem" collection="array" open="(" separator="," close=")">
			#{idItem}
		</foreach>
	</delete>
</mapper>